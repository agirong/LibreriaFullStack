@page "/autores"

<h3>ListarAutores</h3>

<p role="status">Current count: @currentCount</p>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
